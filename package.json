{
  "name": "battlesnake",
  "version": "0.0.0",
  "description": "Snakewithus",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sendwithus/battlesnake.git"
  },
  "author": "Battlesnake <us@battlesnake.io>",
  "homepage": "http://battlesnake.io",
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "babel-cli": "^6.3.17",
    "babel-eslint": "^4.1.6",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "catw": "^1.0.1",
    "eslint": "^1.10.3",
    "eslint-watch": "^2.1.4",
    "history": "^1.13.1",
    "less": "^2.5.3",
    "livereactload": "^2.1.0",
    "postcss-cli": "^2.3.2",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "react-proxy": "^1.1.1",
    "react-router": "^1.0.3",
    "react-transform-catch-errors": "^1.0.1",
    "redbox-react": "^1.2.0",
    "rimraf": "^2.4.4",
    "uglifyify": "^3.0.1",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "clean": "rimraf static/dist",
    "make:static_folders": "mkdir -p static/dist/{css,js}",
    "lint": "esw static/src/js",
    "lesscss:app": "lessc --silent static/src/css/app.less static/dist/css/app.css",
    "lesscss:landing": "lessc --silent static/src/css/landing.less static/dist/css/landing.css",
    "lesscss:markdown": "lessc --silent static/src/css/markdown.less static/dist/css/markdown.css",
    "postcss": "postcss --use autoprefixer -b 'last 2 versions' --dir static/dist/css static/dist/css/*.css",
    "watch:css": "catw -w 'static/src/css/*.less' -c 'npm run build:css'",
    "build:css": "npm run lesscss:app && npm run lesscss:landing && npm run lesscss:markdown && npm run postcss",
    "build:js-dev": "BABEL_ENV=development watchify static/src/js/index.js -v -d -p livereactload -o static/dist/js/app.js",
    "build:js-prod": "BABEL_ENV=production browserify -g uglifyify static/src/js/index.js > static/dist/js/app.js",
    "build:dev": "npm run clean && npm run make:static_folders && npm run lesscss:landing && npm run lint && npm run build:js-dev",
    "build:prod": "npm run clean && npm run make:static_folders && npm run lesscss:landing && npm run lint && npm run build:js-prod"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "stage-1",
            "react"
          ],
          "sourceMap": true,
          "sourceMapRelative": "."
        }
      ]
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0",
      "stage-1"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "livereactload/babel-transform",
                  "imports": [
                    "react"
                  ]
                },
                {
                  "transform": "react-transform-catch-errors",
                  "imports": [
                    "react",
                    "redbox-react"
                  ]
                }
              ]
            }
          ]
        ]
      },
      "production": {
        "plugins": []
      }
    }
  }
}

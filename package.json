{
  "name": "battlesnake",
  "version": "0.0.0",
  "description": "Snakewithus",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sendwithus/battlesnake.git"
  },
  "author": "Battlesnake <us@battlesnake.io>",
  "homepage": "http://battlesnake.io",
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "babel-core": "^5.8.34",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^5.4.0",
    "babel-plugin-react-transform": "^1.1.1",
    "bootstrap": "^3.3.6",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.11.3",
    "eslint-watch": "^2.1.4",
    "jquery": "^2.1.4",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-mini-router": "^2.0.0",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "rimraf": "^2.4.4",
    "webpack": "^1.12.9"
  },
  "scripts": {
    "clean": "rimraf static/dist",
    "make:static_folders": "mkdir -p static/dist/{img,css,js/lib}",
    "copy": "npm run copy:lib && npm run copy:html && npm run copy:lib-bootstrap && npm run copy:lib-react && npm run copy:images",
    "copy:html": "cp -r static/src/html/* static/dist/html",
    "copy:lib": "npm run lib-bootstrap && npm run lib-jquery && npm run lib-react",
    "copy:lib-bootstrap": "cp -r node_modules/bootstrap/dist/css/{bootstrap.min.css,bootstrap-theme.min.css} static/dist/css && cp -r node_modules/bootstrap/dist/js/bootstrap.min.js static/dist/js/lib",
    "copy:lib-jquery": "cp -r node_modules/jquery/dist/jquery.min.js static/dist/js/lib",
    "copy:lib-react": "cp -r node_modules/{react/dist/react.min.js,react-dom/dist/react-dom.min.js} static/dist/js/lib",
    "copy:images": "cp -r static/src/img/* static/dist/img",
    "lint": "npm run lint:js",
    "lint:js": "esw static/src/js",
    "build": "npm run clean && npm run make:static_folders && npm run copy && npm run postcss:build && npm run lint && npm run build:webpack",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js --progress --colors --watch",
    "postcss:build": "postcss --use autoprefixer -b 'last 2 versions' --dir static/dist/css static/src/css/*.css"
  }
}
